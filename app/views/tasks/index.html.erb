<div class='text-center'>
  <h1 style="color:#007bff">My Tasks</h1>
</div>

<br>

<div class="d-flex container justify-content-center">
  <table>
    <thead>
      <tr class='text-center'>
        <th>Created at</th>
        <th>Tasks (ID)</th>
        <th>Title</th>
        <th>Description</th>
        <th>Priority</th>
        <th>Status</th>
        <th>Nickname</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr class='text-center'>
          <td><%= time_ago_in_words(task.created_at) %></td>
          <td><%= task.id %></td>
          <td><strong><%=link_to "#{task.title}", task_path(task) %></strong></td>
          <td><%=task.description %></td>
          <td><%=task.priority %></td>
          <td><%=task.status %></td>
          <td><%=task.user.profile.nickname %></td>
          <td>
          <div class="links d-flex flex-row m-2">
            <%= link_to '', new_task_comment_path(task), class: 'fa fa-comment mr-2'%>
            <%= link_to '', edit_task_path(task), class: 'fa fa-edit mr-1' %>
            <%= link_to '', task, class: 'fa fa-trash ml-1 mr-1', method: :delete, data: { confirm: 'Are you sure you want to delete the task?' } %>
          </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
